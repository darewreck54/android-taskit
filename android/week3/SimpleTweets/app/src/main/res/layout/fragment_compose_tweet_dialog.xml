<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.codepath.apps.SimpleTweets.fragments.ComposeTweetDialogFragment">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_clear_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:id="@+id/ivClose" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_blue_twitter"
        android:id="@+id/ivProfilePic"
        android:layout_margin="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/etStatus"
        android:layout_below="@+id/ivProfilePic"
        android:hint="@string/status_placeholder"
        android:gravity="left|top"
        android:inputType="textMultiLine"
        android:textSize="18sp"
        android:minLines="15"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:isScrollContainer="true"
        android:backgroundTint="@android:color/transparent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Tweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/etStatus"
        android:background="@color/colorPrimary"
        android:layout_margin="10dp"
        android:id="@+id/btTweet"
        android:textColor="@android:color/white" />

    <TextView
        android:text="180"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btTweet"
        android:layout_toLeftOf="@+id/btTweet"
        android:layout_toStartOf="@+id/btTweet"
        android:layout_marginRight="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="9dp"
        android:id="@+id/tvMessageCount" />

</RelativeLayout>
